<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mifos.mifosxdroid.online.CreateCenterFragment">

    <!-- TODO: Update blank fragment layout -->
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="false">

       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           >
           <TableRow
               android:weightSum="1">
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
              android:gravity="right"
               android:id="@+id/tv_center_name"
               android:layout_weight="0.3"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text=":"
                   android:layout_weight="0.1"/>
               <EditText android:layout_weight="0.6"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/et_center_name"/>

           </TableRow>
           <TableRow
               android:weightSum="1">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:id="@+id/tv_office"
                   android:layout_weight="0.3"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text=":"
                   android:layout_weight="0.1"/>
               <AutoCompleteTextView
                   android:id="@+id/et_office"
                   android:layout_weight="0.6"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textColor="#000000"/>
           </TableRow>
           <TableRow
               android:weightSum="1">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/staff_name"
                   android:gravity="right"
                   android:id="@+id/tv_staff"
                   android:layout_weight="0.3"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text=":"
                   android:layout_weight="0.1"/>
               <AutoCompleteTextView
                   android:id="@+id/et_staff"
                   android:layout_weight="0.6"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textColor="#000000"/>
           </TableRow>
           <TableRow>
               <CheckBox
                   android:id="@+id/cb_center_active_status"
                   android:layout_width="276dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:checked="false"
                   android:paddingTop="10dp"
                   android:text="@string/center_activation"
                   android:gravity="start"/>
               </TableRow>
           <TableRow>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/line_active"
                   android:layout_weight="1"
                   android:visibility="gone">
                   <TextView
                       android:id="@+id/tv_active_date"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="15dp"
                       android:paddingTop="10dp"
                       android:textSize="15sp" />
                   <ImageButton
                       android:layout_width="wrap_content"
                       android:paddingLeft="6dp"
                       android:layout_marginTop="5dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/btn_edit_active_date"
                       android:background="#00ffffff"
                       />
               </LinearLayout>
           </TableRow>
           <TableRow
               android:weightSum="1"
               android:layout_marginTop="5dp">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/external_id"
                   android:gravity="right"
                   android:id="@+id/tv_external_id"
                   android:layout_weight="0.3"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text=":"
                   android:layout_weight="0.1"/>
               <EditText android:layout_weight="0.6"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/et_external_id"/>

           </TableRow>
           <TableRow
               android:weightSum="1"
               android:layout_marginTop="10dp">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/submission_data"
                   android:gravity="right"
                   android:id="@+id/tv_center_submission_date"
                   android:layout_weight="0.3"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text=":"
                   android:layout_weight="0.1"/>

                   <TextView
                       android:padding="0dp"
                       android:layout_weight="0.3"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:id="@+id/et_center_submission_date"/>
                   <ImageButton
                       android:layout_width="0dp"
                       android:layout_weight="0.2"
                       android:layout_height="wrap_content"
                       android:id="@+id/btn_edit_submission_date"
                       android:background="#00ffffff"
                       />
           </TableRow>
           <TableRow
               android:gravity="center">
               <Button
                   android:layout_width="match_parent"
                   android:gravity="center"
                   android:text="@string/submit"
                   android:id="@+id/btn_create_center"
                   android:layout_gravity="center"

                   />
           </TableRow>
       </TableLayout>


   </ScrollView>

</FrameLayout>
